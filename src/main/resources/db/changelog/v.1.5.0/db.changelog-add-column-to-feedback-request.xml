<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.5.2" author="taras.lutsiuk">
        <addColumn tableName="course_feedback_request">
            <column name="status" type="BIGINT" defaultValueNumeric="0">
                <constraints foreignKeyName="feedback_request_status_fkey" referencedColumnNames="id" referencedTableName="feedback_request_status"
                             nullable="true"/>
            </column>
            <column name="last_notification" type="TIMESTAMP">
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>